<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/chieu">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/backgroundframe">
            <TextView
                android:id="@+id/tvTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="40000"
                android:background="@drawable/backgroundmoney"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bitcoin" />

        <CheckBox
            android:id="@+id/cbamthanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:button="@drawable/hinhamthanh"
            android:text="@null" />
        <TextView
            android:id="@+id/tvThoiGian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f44242"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:text="00:03:00" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <GridView
            android:id="@+id/banco"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:numColumns="3"
            android:verticalSpacing="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/xingau1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/xingau"/>

        <ImageView
            android:id="@+id/xingau2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/xingau"/>

        <ImageView
            android:id="@+id/xingau3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/xingau" />
    </LinearLayout>

    <Button
        android:id="@+id/btnLacXiNgau"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/start"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="@null"
        android:onClick="LacXiNgau"/>


</LinearLayout>